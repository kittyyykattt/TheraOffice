<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.TheraOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.TheraOffice.Views">

    <TabBar>
        <ShellContent
            Title="Patients"
            ContentTemplate="{DataTemplate views:PatientsPage}"
            Route="PatientsPage" />

        <ShellContent
            Title="Physicians"
            ContentTemplate="{DataTemplate views:PhysiciansPage}"
            Route="PhysiciansPage" />

        <ShellContent
            Title="Appointments"
            ContentTemplate="{DataTemplate views:AppointmentsPage}"
            Route="AppointmentsPage" />
    </TabBar>

</Shell>
