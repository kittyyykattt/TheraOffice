<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.TheraOffice.Views.PhysicianDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Physician Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Entry Placeholder="First Name" Text="{Binding FirstName}" />
            <Entry Placeholder="Last Name" Text="{Binding LastName}" />
            <Entry Placeholder="License Number" Text="{Binding LicenseNumber}" />
            <DatePicker Date="{Binding GraduationDate}" />
            <Editor Placeholder="Specializations (comma-separated)"
                    AutoSize="TextChanges"
                    Text="{Binding Specializations}" />

            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="Save" Clicked="OnSaveClicked" />
                <Button Text="Delete" Clicked="OnDeleteClicked"
                        TextColor="Red" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
